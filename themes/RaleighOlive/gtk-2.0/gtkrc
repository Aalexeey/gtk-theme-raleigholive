    }

    image {
      function = CHECK
      recolorable = TRUE
      state = SELECTED
      shadow = IN
      overlay_file = "../gtk-assets/checks/check-checked.png"
      overlay_stretch = FALSE
    }
    
    image {
      function = CHECK
      recolorable = TRUE
      state = INSENSITIVE
      shadow = IN
      overlay_file = "../gtk-assets/checks/check-checked-disabled.png"
      overlay_stretch = FALSE
    }
    
    image {
      function = OPTION
      state = NORMAL
      shadow = OUT
      overlay_file = "../gtk-assets/checks/radio-unchecked.png"
